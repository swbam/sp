# Production Environment Configuration - MySetlist
# This file contains production-optimized environment variables

# App Configuration
NEXT_PUBLIC_APP_ENV=production
NODE_ENV=production

# Performance Optimizations
NEXT_TELEMETRY_DISABLED=1
BUNDLE_ANALYZE=false
ENABLE_PERFORMANCE_MONITORING=true

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Cache Configuration (optimized for production)
API_CACHE_DURATION=600
STATIC_CACHE_DURATION=31536000

# Rate Limiting (stricter for production)
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MS=60000

# Database Performance
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=10000

# Image Optimization
IMAGES_OPTIMIZE=true
IMAGES_QUALITY=75
IMAGES_FORMATS=webp,avif

# Compression and Minification
NEXT_COMPRESS=true
NEXT_MINIFY=true
NEXT_SOURCEMAP=false

# Build Optimizations
NEXT_STANDALONE=true
NEXT_OUTPUT_EXPORT=false

# Monitoring and Analytics
VERCEL_ANALYTICS_ENABLED=true
SENTRY_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# CDN Configuration
CDN_ENABLED=true
STATIC_CDN_URL=https://cdn.mysetlist.com